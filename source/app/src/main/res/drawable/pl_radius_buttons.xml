<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="40dip" />
            <stroke android:width="1dip" android:color="#2CB131" />
            <gradient android:angle="-90" android:startColor="#2CB131" android:endColor="#2CB131"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/colorWhite" />
            <solid android:color="@color/colorWhite"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="40dip" />
            <stroke android:width="1dip" android:color="#2CB131" />
            <gradient android:angle="-90" android:startColor="@color/colorWhite" android:endColor="@color/colorWhite" />
        </shape>
    </item>
</selector>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTranparent"
    tools:context=".minimizeSong.MinimizeSongFragment">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewPlayingMinimize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorTranparent"
        app:cardCornerRadius="@dimen/border_radius_xnormal"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBgPrimary">

            <android.support.v7.widget.CardView
                android:id="@+id/cvImgSongMinimize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_size_small"
                app:cardBackgroundColor="@color/colorBlackGlassLight"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"

                app:contentPadding="0dp">

                <ImageView
                    android:id="@+id/imgSongMinimize"
                    android:layout_width="@dimen/image_card_item"
                    android:layout_height="@dimen/image_card_item"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    tools:srcCompat="@mipmap/ic_music" />

            </android.support.v7.widget.CardView>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_size_small"
                android:layout_weight="1"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtTitleMinimize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|left"
                    android:ellipsize="end"

                    android:gravity="left"
                    android:maxLines="1"
                    android:text="Tiêu đề bài hát"
                    android:textColor="@color/colorTitleWhitePrimary"
                    android:textSize="@dimen/text_size_normal"
                    android:textStyle="bold"
                    tools:ignore="RtlHardcoded" />

                <TextView
                    android:id="@+id/txtArtistMinimize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nghệ sĩ"
                    android:textColor="@color/colorTitleSecondary"
                    android:textSize="@dimen/text_size_normal" />


                <!--<TextView-->
                <!--android:id="@+id/txtAlbum"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Album"-->
                <!--android:textSize="14sp"-->
                <!--android:textColor="@color/colorWhite"-->
                <!--/>-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:layout_marginHorizontal="@dimen/margin_size_small"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/margin_size_small">

                <ImageButton
                    android:id="@+id/btnPrevSong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"

                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="@dimen/margin_size_snormal"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_skip_previous_black_24dp"
                    tools:ignore="RtlHardcoded" />

                <ImageButton
                    android:id="@+id/btnPlaySong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="@dimen/margin_size_snormal"

                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_play_circle_outline_black_32dp" />


                <ImageButton
                    android:id="@+id/btnNextSong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"

                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="@dimen/margin_size_snormal"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_skip_next_black_24dp" />
            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>


</FrameLayout>